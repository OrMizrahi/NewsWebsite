@using Microsoft.AspNet.Identity
<div class="collapse navbar-collapse order-4 order-md-4" id="navbar">
    @if (!Request.IsAuthenticated)
    {
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" href="#" data-toggle="modal" data-target="#exampleModal">Sign Up/In</a>
            </li>
        </ul>

        <!-- ------------- -->
        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title fixed-font" id="exampleModalLabel">Connection Panel</h5>
                        <button type="button" class="close fixed-btn" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true" style="font-size: 1.5rem;">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <article style="display: none;" class="card-body" id="signup_panel">
                            <a href="#" class="float-right btn btn-outline-primary fixed-btn" id="signin">Sign in</a>
                            <h4 class="card-title mb-4 mt-1 fixed-font">Sign up</h4>
                            <form action="/Home/register" method="post">
                                <div class="form-group">
                                    <input name="name" class="form-control" placeholder="Nickname" type="text">
                                </div> <!-- form-group// -->
                                <div class="form-group">
                                    <input name="email" class="form-control" placeholder="Email" type="email">
                                </div> <!-- form-group// -->
                                <div class="form-group">
                                    <input name="password" class="form-control" placeholder="******" type="password">
                                </div> <!-- form-group// -->
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary btn-block fixed-btn"> Register  </button>
                                        </div> <!-- form-group// -->
                                    </div>
                                    <div class="col-md-6 text-right">
                                        <!--<a class="small" href="#">Forgot password?</a>-->
                                    </div>
                                </div> <!-- .row// -->
                            </form>
                        </article>
                        <article class="card-body" id="signin_panel">
                            <a href="#" class="float-right btn btn-outline-primary fixed-btn" id="signup">Sign up</a>
                            <h4 class="card-title mb-4 mt-1 fixed-font">Sign in</h4>
                            <p>
                                <a href="" class="btn btn-block btn-outline-info fixed-btn"> <i class="fab fa-twitter"></i> Login via Twitter</a>
                                <a href="" class="btn btn-block btn-outline-primary fixed-btn"> <i class="fab fa-facebook-f"></i> Login via facebook</a>
                            </p>
                            <hr>
                            <form>
                                <div class="form-group">
                                    <input name="" class="form-control" placeholder="Email or login" type="email">
                                </div> <!-- form-group// -->
                                <div class="form-group">
                                    <input class="form-control" placeholder="******" type="password">
                                </div> <!-- form-group// -->
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary btn-block fixed-btn"> Login  </button>
                                        </div> <!-- form-group// -->
                                    </div>
                                    <div class="col-md-6 text-right">
                                        <a class="small" href="#">Forgot password?</a>
                                    </div>
                                </div> <!-- .row// -->
                            </form>
                        </article>
                    </div>
                </div>
            </div>
        </div>
        <!-- ------------- -->
    }
    else
    {
        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                </li>
                <li class="nav-item"><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
            </ul>
        }
    }

    <form class="form-inline" role="search">
        <input class="search js-search form-control form-control-rounded mr-sm-2" type="text" title="Enter search query here.." placeholder="Search.." aria-label="Search">
    </form>
</div>